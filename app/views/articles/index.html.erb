<h1>All Articles</h1>
<table style="border:1px solid red">
  <thead>
    <tr>
      <td style="border:1px solid red"><b>S.No</b></td>
      <td style="border:1px solid red"><b>Title</b></td>
      <td style="border:1px solid red"><b>Description</b></td>
      <td style="border:1px solid red"><b>Actions</b></td>
    </tr>
  </thead>
  <tbody>
    <% @articles.each_with_index do |article,index| %>
      <tr>
        <td style="border:1px solid black"><%= "#{index+1}" %></td>
        <td style="border:1px solid black"><%= article.title %></td>
        <td style="border:1px solid black"><%= article.description %></td>
        <td style="border:1px solid black"><%= link_to "Show", article_path(article) %> | <%= link_to "Edit", edit_article_path(article)%> | <%= link_to "Delete", article_path(article),method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= link_to "Create new Article", new_article_path %></p>