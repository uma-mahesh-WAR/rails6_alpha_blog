<div class="container">
	<div class="row justify-content-center">
		<div class="col-10">
			<%= render "shared/errors",obj: @article %>
			<%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
				<div class="form-group row m-3">
					<%= f.label :title, class: "col-lg-2 col-12 col-form-label text-light" %>
					<div class="col-10">
						<%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
					</div>
				</div>

				<div class="form-group row m-3">
					<%= f.label :description, class: "col-lg-2 col-12 col-form-label text-light" %>
					<div class="col-10">
						<%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
					</div>
				</div>

				<div class="form-group row m-3">
					<%= f.label :Category, class: "col-lg-2 col-12 col-form-label text-light" %>
					<div class="col-10">
						<%= f.collection_check_boxes( :category_ids, Category.all, :id, :name) do |cb| %>
							<% cb.label(class: "checkbox-inline input_checkbox m-2") {cb.check_box(class: "checkbox m-1") + cb.text } %>
						<% end %>
					</div>
				</div>

				<div class="justify-content-center">
					<%= f.submit class: "btn btn-outline-light btn-lg" %>
				</div>
			<% end %>
			<%= link_to 'Cancel and return to articles listing', articles_path, class: "btn btn-info" %>
		</div>
	</div>
</div>
