<div class="container">
	<h1  class="text-center mt-4">Create a new Category</h1>
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-10">
				<%= render "shared/errors",obj: @category %>
				<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
					<div class="form-group row m-3">
						<%= f.label :name,"Category Name", class: "col-lg-2 col-12 col-form-label text-light" %>
						<div class="col-10">
							<%= f.text_field :name, class: "form-control shadow rounded", placeholder: "New Category" %>
						</div>
					</div>

					<div class="justify-content-center">
						<%= f.submit class: "btn btn-outline-light btn-lg" %>
					</div>
				<% end %>
				<%= link_to 'Cancel and return to articles listing', articles_path, class: "btn btn-info" %>
			</div>
		</div>
	</div>
</div>
