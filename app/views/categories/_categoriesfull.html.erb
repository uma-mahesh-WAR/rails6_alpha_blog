<div class="card text-center">
	<div class="card-body">
		<h5 class="card-title"><%= link_to "#{category.name}", category_path(category),class:"" %></h5>
		<p class="m-0">
			<% if isLoggedin && current_user.admin? %>
				<%= link_to "Edit", edit_category_path(category),class:"btn btn-outline-primary"%>  <%= link_to "Delete", category_path(category),class:"btn btn-outline-danger",method: :delete, data: { confirm: 'Are you sure?' } %>
			<%end%>
		</p>
		<p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
	</div>
	<div class="card-footer text-muted">
		<small>created <%= time_ago_in_words(category.created_at)%> ago, updated <%= time_ago_in_words(category.updated_at)%> ago</small>
	</div>
</div>
