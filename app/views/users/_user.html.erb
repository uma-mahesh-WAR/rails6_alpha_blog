<div class="card text-center">
	<div class="card-header">
		<%= link_to user.username, user %>
	</div>
	<div class="card-body">
		<h5 class="card-title">
			<%= link_to gravatar_for(user,size:100),user %></h5>
		<p class="card-text"><%= pluralize(user.articles.count,"article") %></p>
		<p><%= link_to "View Profile", user,class:"btn btn-outline-success" %>
			<%if isLoggedin%>
				<% if user==current_user%>
					<%= link_to "Edit Profile", edit_user_path(user),class:"btn btn-outline-primary"%>
				<% end%>
				<% if (user==current_user || current_user.admin?) %>
					<%= link_to "Delete Profile", user_path(user),class:"btn btn-outline-danger",method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end%>
			<%end%>
		</p>
	</div>
	<div class="card-footer text-muted">
		<small>created <%= time_ago_in_words(user.created_at)%> ago, updated <%= time_ago_in_words(user.updated_at)%> ago</small>
	</div>
</div>
